{
  "name": "@nachos/gateway",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "description": "Nachos Gateway - Session management and routing",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc --build",
    "dev": "tsx watch src/main.ts",
    "start": "node dist/main.js",
    "clean": "rm -rf dist *.tsbuildinfo",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@nacho-labs/nachos-dlp": "^1.0.0",
    "@nachos/bus": "workspace:*",
    "@nachos/config": "workspace:*",
    "@nachos/context-manager": "workspace:*",
    "@nachos/types": "workspace:*",
    "better-sqlite3": "^12.6.2",
    "redis": "^4.7.0",
    "uuid": "^13.0.0",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.10.5",
    "@types/uuid": "^11.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}
